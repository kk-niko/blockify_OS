<style>
  .blockify__collection--1 .blockify-collection__inner {
    display: grid;
  }
  .blockify__collection--1.gtc-2 .blockify-collection__inner {
    grid-template-columns: repeat(2,1fr);
  }
  .blockify__collection--1.gtc-3 .blockify-collection__inner {
    grid-template-columns: repeat(3,1fr);
  }
  .blockify__collection--1 .blockify-collection__inner .blockify-collection__single-item {
    height: 260px;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
</style>
<div class="blockify__collection--1 gtc-{{ section.settings.columns_desktop }}">
  <div class="container">
    <div class="blockify-collection__inner">
      {% for block in section.blocks %}
        <div class="blockify-collection__single-item" style="background: {{ block.settings.bgcolor }}">
        <h3>
          {{ block.settings.collection.title }}
        </h3>
        <a href="#">Shop now</a>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Blockify - Collection 1",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "select",
        "id": "columns_desktop",
        "label": "Items per row Desktop",
        "options": [
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          }
        ],
        "default": "2"
      },
      {
        "type": "range",
        "id": "gap_size",
        "min": 0,
        "max": 80,
        "step": 4,
        "unit": "px",
        "label": "Gap size",
        "default": 32
      },
      {
        "type": "header",
        "content": "Padding Desktop"
      },
      {
        "type": "range",
        "id": "section_padding_top_desktop",
        "min": 0,
        "max": 148,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 120
      },
      {
        "type": "range",
        "id": "section_padding_bottom_desktop",
        "min": 0,
        "max": 148,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 120
      },
      {
        "type": "header",
        "content": "Padding Mobile"
      },
      {
        "type": "range",
        "id": "section_padding_top_mobile",
        "min": 0,
        "max": 148,
        "step": 4,
        "unit": "px",
        "label": "Padding top",
        "default": 120
      },
      {
        "type": "range",
        "id": "section_padding_bottom_mobile",
        "min": 0,
        "max": 148,
        "step": 4,
        "unit": "px",
        "label": "Padding bottom",
        "default": 120
      }
    ],
    "blocks": [
      {
       "name": "Collection",
       "type": "Collection",
       "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Custom Category Image"
        },
        {
          "type": "color",
          "id": "bgcolor",
          "label": "Background color",
          "default": "#D6D3C9"
        }
       ]
     }
    ],
    "presets": [
      {
        "name": "Blockify - Collection 1"
      }
    ]
  }
{% endschema %}